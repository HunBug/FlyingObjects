    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Simulator",
            "type": "python",
            "request": "launch",
            "module": "simulator.main",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {"PYTHONPATH": "${workspaceFolder}/src/"}
        },
        {
            "name": "Python: Profile",
            "type": "austin",
            "label": "Profile tests",
            "command": [
                "poetry",
                "run"
            ],
            "args": [
                "python",
                "-m",
                "pytest",
            ]
        }
    ]
}